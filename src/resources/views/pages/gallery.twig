{% extends "layouts/master.twig" %}

{% block title %}Gallery{% endblock %}

{% block content %}
{% include "includes/plate.twig" %}
    <div class="container">

        <div class="gallery-slider">
            <div class="gallery-slider__handle ui-slider-handle"></div>
        </div>

        <div class="gallery">
        {% for image in images %}
            <div class="gallery__item">
                <time>{{ image.created_at }}</time>
                <img src="{{ base_url() }}/img/gallery/{{image.url}}">
                <p>{{ image.description }}</p>
            </div>
        {% endfor %}
        </div>

        <div class="gallery-modal">
              <span class="gallery-modal__close">&times;</span>
              <img class="gallery-modal__img">
              <p class="gallery-modal__desc"></p>
        </div>
    </div>

    <img src="{{ base_url() }}/img/misc/foot.png">
{% endblock %}
