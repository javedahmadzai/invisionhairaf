{% extends "layouts/master.twig" %}

{% block content %}
{% include "includes/plate.twig" %}
    <div class="container">
        <div class="gallery">
        {% for image in images %}
            <div class="gallery__item">
                <date class="gallery__item__date">{{ image.created_at }}</date>
                <img src="{{ base_url() }}/img/gallery/{{image.url}}" class="gallery__item__img">
                <p class="gallery__item__description">{{ image.description }}</p>
            </div>
        {% endfor %}
        </div>

        <img src="{{ base_url() }}/img/misc/foot.png">
    </div>
{% endblock %}
