{% extends "layouts/master.twig" %}

{% block content %}
    <div class="container">
        <p style="text-align:center;color:#333;"><i class="fab fa-cpanel fa-10x"></i></p>
        <form action="{{ path_for('admin.login') }}" method="post" class="form form--center form--dark" style="border-radius:10px;margin-bottom:6rem;">
            {% if error %}
            <p class="form__message form__message--error form__message--fade"><b>Error:</b> {{ error }}</p>
            {% endif %}
            <div class="form__item">
                <label for="username" class="form__item__label form__item__label--frame">Username: </label>
                <input type="text" name="username" placeholder="Type username..." value="{{ old.username }}" class="form__item__input form__item__input--full">
            </div>
            <div class="form__item">
                <label for="password" class="form__item__label form__item__label--frame">Password: </label>
                <input type="password" name="password" placeholder="Type password..." class="form__item__input form__item__input--full">
            </div>
            <div class="form__item">
                <input type="submit" value="Login" class="form__item__submit--fancy">
            </div>
            {{ csrf_field | raw }}
        </form>
    </div>
{% endblock %}
