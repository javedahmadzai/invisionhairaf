<style>
.map {
    width: 100%;
    height: 200px;
}
@media (min-width: 40em){
    .map {
        width: 100%;
        height: 400px;
    }
}
</style>

<div id="map" class="map"></div>

<script>
    function initMap() {
    var settings = {
        position: {
            lat: 34.544838,
            lng: 69.152089
        },
        title: 'Invision Hair Care Center, Kabul-Afghanistan',
        content: 'Invision Hair Care Center, Kabul-Afghanistann'
    };

    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        center: settings.position
    });

    var marker = new google.maps.Marker({
        position: settings.position,
        map: map,
    });

    var infowindow = new google.maps.InfoWindow({
        content: settings.content
    });

    infowindow.open(map, marker);
}
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCyHWm6orZclDIdEbPHVroYgdTEMkKpzc4&callback=initMap" async defer></script>
